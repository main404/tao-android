<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="com.taotete.app.ui.main.nav.NavFragment">

    <com.taotete.app.ui.main.nav.NavigationButton
        android:id="@+id/nav_item_news"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />

    <com.taotete.app.ui.main.nav.NavigationButton
        android:id="@+id/nav_item_tweet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />

    <com.taotete.app.ui.main.nav.NavigationButton
        android:id="@+id/nav_item_circle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />

    <com.taotete.app.ui.main.nav.NavigationButton
        android:id="@+id/nav_item_explore"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />

    <com.taotete.app.ui.main.nav.NavigationButton
        android:id="@+id/nav_item_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/lay_12"
        android:paddingRight="@dimen/lay_12" />
</LinearLayout>
