<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 操作项样式 start -->
    <style name="option_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_material</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/space_12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="option_item_img">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">@dimen/space_10</item>
    </style>

    <style name="option_item_text_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/space_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="option_item_text" parent="@style/option_item_text_parent">
        <item name="android:drawablePadding">@dimen/space_8</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <!-- 操作项样式end -->

    <style name="SingleLineEditText">
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/font_6</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/padding_15</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginEdit" parent="SingleLineEditText">
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/padding_15</item>
        <item name="android:layout_marginRight">@dimen/padding_15</item>
    </style>

    <style name="ValidePhoneView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/padding_15</item>
        <item name="android:background">@drawable/phone_message_bg</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">发送验证码</item>
        <item name="android:textColor">@color/phone_message</item>
    </style>

    <!--垂直分割线-->
    <style name="DivideLineVer" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divide_line</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
